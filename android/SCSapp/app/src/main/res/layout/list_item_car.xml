<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/example_cardview"
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="-23dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/car_id"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--
            <android.support.constraint.ConstraintLayout
                android:id="@+id/active_booking"
                android:layout_width="357dp"
                android:layout_height="171dp"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/text_profile_email"
                app:layout_constraintHorizontal_bias="0.545"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintVertical_bias="0.244">
        -->
            <!-- Locate picture of booked car and load it into the cardview from the DB -->


            <!-- Keep confirm booking here (?) -->

            <!-- </android.support.constraint.ConstraintLayout> -->

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="371dp"
                android:layout_height="78dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/volvo"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <!-- Change to match the car stats -->
            <TextView
                android:id="@+id/CarName"
                android:layout_width="244dp"
                android:layout_height="23dp"
                android:paddingBottom="1dip"
                android:paddingTop="4dip"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="9dp"
                app:layout_constraintTop_toBottomOf="@+id/thumbnail"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/CarID"
                android:layout_width="51dp"
                android:layout_height="20dp"
                android:paddingBottom="2dip"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/thumbnail"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_editor_absoluteX="305dp" />

            <TextView
                android:id="@+id/CarInfo"
                android:layout_width="335dp"
                android:layout_height="80dp"
                android:textColor="#5d5d5d"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/CarName" />

            <!--
            For more information::::
            <TextView
                android:id="@+id/CourseID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#5d5d5d"
                android:textStyle="bold" />
                -->
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>




