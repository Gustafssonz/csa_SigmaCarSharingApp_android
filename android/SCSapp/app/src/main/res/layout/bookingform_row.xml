        <TextView
            android:id="@+id/tv_car"
            android:layout_width="139dp"
            android:layout_height="21dp"
            android:text="example_car"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline3"/>

        <TextView
            android:id="@+id/tvTimeOfBooking"
            android:layout_width="103dp"
            android:layout_height="21dp"
            android:text="Time of booking"
            android:textAppearance="@android:style/TextAppearance.Material.Small"
            android:typeface="sans"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvDestination"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/tvErrand"
            android:layout_width="90dp"
            android:layout_height="16dp"
            android:text="Errand"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvDestination"
            app:layout_constraintLeft_toRightOf="@+id/tvDestination"
            android:layout_marginLeft="0dp"/>

        <TextView
            android:id="@+id/tvDestination"
            android:layout_width="70dp"
            android:layout_height="16dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:text="Destination"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_constraintLeft_toLeftOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/tvEndDate"/>

        <TextView
            android:id="@+id/tvStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Date"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_car"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline3"/>

        <TextView
            android:id="@+id/tvEndDate"
            android:layout_width="64dp"
            android:layout_height="18dp"
            android:layout_marginTop="0dp"
            android:text="End Date"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_constraintTop_toBottomOf="@+id/tvStartDate"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline3"/>

        <TextView
            android:id="@+id/tvStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Time"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvStartDate"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline2"/>

        <TextView
            android:id="@+id/tvEndTime"
            android:layout_width="58dp"
            android:layout_height="16dp"
            android:text="End Time"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvEndDate"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline2"/>

        <TextView
            android:id="@+id/tvPurpose"
            android:layout_width="51dp"
            android:layout_height="16dp"
            android:text="Purpose"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvDestination"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline2"/>

        <android.support.constraint.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"
            tools:layout_editor_absoluteX="186dp"
            tools:layout_editor_absoluteY="0dp"/>

        <android.support.constraint.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="352dp"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="0dp"/>

    </android.support.constraint.ConstraintLayout>
