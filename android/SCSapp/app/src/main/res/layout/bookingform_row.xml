        <TextView
            android:id="@+id/tvTimeOfBooking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:text="Time of booking"
            app:layout_constraintLeft_toRightOf="@+id/tvPurpose"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvErrand"
            android:layout_width="138dp"
            android:layout_height="21dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="8dp"
            android:text="Errand"
            android:textAppearance="?android:attr/textAppearanceLarge"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvEndDate"
            app:layout_constraintVertical_bias="0.0"/>

        <TextView
            android:id="@+id/tvDestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="9dp"
            android:text="Destination"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_constraintLeft_toLeftOf="@+id/tvErrand"
            app:layout_constraintTop_toBottomOf="@+id/tvErrand"
            tools:layout_conversion_absoluteHeight="16dp"
            tools:layout_conversion_absoluteWidth="70dp"
            tools:layout_conversion_absoluteX="4dp"
            tools:layout_conversion_absoluteY="30dp"/>

        <TextView
            android:id="@+id/tvStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="108dp"
            android:layout_marginLeft="41dp"
            android:text="Start Date"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_conversion_absoluteHeight="16dp"
            tools:layout_conversion_absoluteWidth="63dp"
            tools:layout_conversion_absoluteX="4dp"
            tools:layout_conversion_absoluteY="46dp"/>

        <TextView
            android:id="@+id/tvEndDate"
            android:layout_width="64dp"
            android:layout_height="19dp"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="8dp"
            android:text="End Date"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvStartDate"
            tools:layout_conversion_absoluteHeight="16dp"
            tools:layout_conversion_absoluteWidth="56dp"
            tools:layout_conversion_absoluteX="4dp"
            tools:layout_conversion_absoluteY="63dp"/>

        <TextView
            android:id="@+id/tvStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Start Time"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvStartDate"
            app:layout_constraintLeft_toRightOf="@+id/tvStartDate"
            tools:layout_conversion_absoluteHeight="16dp"
            tools:layout_conversion_absoluteWidth="65dp"
            tools:layout_conversion_absoluteX="4dp"
            tools:layout_conversion_absoluteY="79dp"/>

        <TextView
            android:id="@+id/tvEndTime"
            android:layout_width="66dp"
            android:layout_height="19dp"
            android:layout_marginLeft="8dp"
            android:text="End Time"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvEndDate"
            app:layout_constraintLeft_toRightOf="@+id/tvEndDate"
            tools:layout_conversion_absoluteHeight="16dp"
            tools:layout_conversion_absoluteWidth="58dp"
            tools:layout_conversion_absoluteX="4dp"
            tools:layout_conversion_absoluteY="96dp"/>

        <TextView
            android:id="@+id/tvPurpose"
            android:layout_width="138dp"
            android:layout_height="20dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="41dp"
            android:text="Purpose"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_constraintBottom_toTopOf="@+id/tvStartDate"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_conversion_absoluteHeight="16dp"
            tools:layout_conversion_absoluteWidth="51dp"
            tools:layout_conversion_absoluteX="4dp"
            tools:layout_conversion_absoluteY="112dp"/>

    </android.support.constraint.ConstraintLayout>
