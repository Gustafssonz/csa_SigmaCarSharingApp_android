            android:text="Is confirmed"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Id"
            android:id="@+id/tvId" />

    </LinearLayout>
