        <TextView
            android:id="@+id/tv_info_end"
            android:layout_width="17dp"
            android:layout_height="11dp"
            android:text="end"
            android:textAppearance="@android:style/TextAppearance.Material.Small"
            android:textSize="8sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvEndDate"
            tools:layout_editor_absoluteX="8dp"/>

        <TextView
            android:id="@+id/tv_info_start"
            android:layout_width="27dp"
            android:layout_height="11dp"
            android:text="Start"
            android:textAppearance="@android:style/TextAppearance.Material.Small"
            android:textSize="8sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvStartDate"
            tools:layout_editor_absoluteX="8dp"/>

        <TextView
            android:id="@+id/tvVehicleId"
            android:layout_width="298dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="List of bookings"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            app:layout_constraintLeft_toLeftOf="@+id/guideline3"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvReg"
            android:layout_width="109dp"
            android:layout_height="19dp"
            android:layout_marginLeft="1dp"
            android:text="Time of booking"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Material.Small"
            android:typeface="sans"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvDestination"
            app:layout_constraintLeft_toLeftOf="@+id/guideline2"/>

        <TextView
            android:id="@+id/tvYear"
            android:layout_width="90dp"
            android:layout_height="18dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="48dp"
            android:text="Errand"
            android:textAlignment="center"
            app:layout_constraintLeft_toLeftOf="@+id/guideline3"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvMileage"
            android:layout_width="90dp"
            android:layout_height="18dp"
            android:layout_marginLeft="25dp"
            android:text="Destination"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_constraintLeft_toLeftOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/tvErrand"/>

        <TextView
            android:id="@+id/tvBody"
            android:layout_width="90dp"
            android:layout_height="17dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="6dp"
            android:text="Start Date"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_constraintLeft_toLeftOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/tvDestination"/>

        <TextView
            android:id="@+id/tvEquipment"
            android:layout_width="90dp"
            android:layout_height="18dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="-1dp"
            android:text="End Date"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_constraintLeft_toLeftOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/tvStartDate"/>

        <TextView
            android:id="@+id/tvModel"
            android:layout_width="90dp"
            android:layout_height="18dp"
            android:layout_marginLeft="0dp"
            android:text="Start Time"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvStartDate"
            app:layout_constraintLeft_toLeftOf="@+id/guideline2"/>

        <TextView
            android:id="@+id/tvFuel"
            android:layout_width="90dp"
            android:layout_height="18dp"
            android:layout_marginTop="-8dp"
            android:text="End Time"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_constraintLeft_toLeftOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/tvStartTime"/>

        <TextView
            android:id="@+id/tvSite"
            android:layout_width="90dp"
            android:layout_height="18dp"
            android:layout_marginLeft="1dp"
            android:layout_marginStart="0dp"
            android:text="Purpose"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvErrand"
            app:layout_constraintLeft_toLeftOf="@+id/guideline2"/>

        <TextView
            android:id="@+id/tvResponsible"
            android:layout_width="90dp"
            android:layout_height="18dp"
            android:layout_marginTop="-8dp"
            android:text="End Time"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_constraintLeft_toLeftOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/tvStartTime"/>

        <TextView
            android:id="@+id/tvIsAvalible"
            android:layout_width="90dp"
            android:layout_height="18dp"
            android:layout_marginTop="-8dp"
            android:text="End Time"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_constraintLeft_toLeftOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/tvStartTime"/>

        <TextView
            android:id="@+id/tvVehicleImageLink"
            android:layout_width="90dp"
            android:layout_height="18dp"
            android:layout_marginTop="-8dp"
            android:text="End Time"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_constraintLeft_toLeftOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/tvStartTime"/>

        <ImageView
            android:id="@+id/iv_car"
            android:layout_width="40dp"
            android:layout_height="49dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintRight_toRightOf="parent">
        </ImageView>

        <android.support.constraint.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"
            tools:layout_editor_absoluteX="178dp"
            tools:layout_editor_absoluteY="0dp"/>

        <android.support.constraint.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="356dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp"/>

    </android.support.constraint.ConstraintLayout>
