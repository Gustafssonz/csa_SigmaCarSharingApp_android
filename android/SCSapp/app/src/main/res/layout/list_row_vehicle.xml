<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:baselineAligned="false"
              android:clickable="false"
              android:descendantFocusability="blocksDescendants"
              android:focusable="false"
              android:focusableInTouchMode="false"
              android:orientation="vertical"
              android:padding="6dp">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="6dp">

        <TextView
            android:id="@+id/tv_model"
            android:layout_width="113dp"
            android:layout_height="17dp"
            android:layout_marginLeft="8dp"
            android:text="Model"
            android:textAlignment="viewStart"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/guideline3"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_site"
            android:layout_width="90dp"
            android:layout_height="18dp"
            android:layout_marginLeft="8dp"
            android:text="Site"
            android:textAlignment="viewStart"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/tv_model"
            app:layout_constraintTop_toTopOf="@+id/tv_model"/>

        <TextView
            android:id="@+id/tv_reg"
            android:layout_width="27dp"
            android:layout_height="16dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:text="reg"
            android:textAlignment="viewStart"
            android:textAppearance="@android:style/TextAppearance.Material.Small"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_model"
            app:layout_constraintTop_toBottomOf="@+id/tv_model"/>

        <TextView
            android:id="@+id/tv_year"
            android:layout_width="27dp"
            android:layout_height="17dp"
            android:layout_marginLeft="8dp"
            android:text="year"
            android:textAlignment="viewStart"
            android:textAppearance="@android:style/TextAppearance.Material.Small"
            android:textSize="12sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_equipment"
            app:layout_constraintLeft_toRightOf="@+id/tv_equipment"/>

        <TextView
            android:id="@+id/tv_vehicleId"
            android:layout_width="28dp"
            android:layout_height="22dp"
            android:layout_marginLeft="8dp"
            android:text="vehicleId"
            android:textAppearance="@android:style/TextAppearance.Material.Small"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_model"
            app:layout_constraintLeft_toRightOf="@+id/tv_site"/>

        <!-- <TextView
            android:id="@+id/tvTimeOfBooking"
            android:layout_width="109dp"
            android:layout_height="19dp"
            android:text="Time of booking"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Material.Small"
            android:typeface="sans"
            tools:layout_editor_absoluteY="125dp"
            tools:layout_editor_absoluteX="158dp"/> -->

        <TextView
            android:id="@+id/tv_mileage"
            android:layout_width="90dp"
            android:layout_height="17dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="8dp"
            android:text="mileage"
            android:textAlignment="viewStart"
            app:layout_constraintLeft_toLeftOf="@+id/tv_fuel"
            app:layout_constraintTop_toBottomOf="@+id/tv_fuel"/>

        <TextView
            android:id="@+id/tv_body"
            android:layout_width="91dp"
            android:layout_height="17dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="body"
            android:textAlignment="viewStart"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_constraintLeft_toLeftOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/tv_equipment"/>

        <TextView
            android:id="@+id/tv_equipment"
            android:layout_width="113dp"
            android:layout_height="17dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="13dp"
            android:text="equip"
            android:textAlignment="viewStart"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_constraintLeft_toLeftOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/tv_model"/>

        <TextView
            android:id="@+id/tv_fuel"
            android:layout_width="70dp"
            android:layout_height="17dp"
            android:layout_marginLeft="8dp"
            android:text="fuel"
            android:textAlignment="viewStart"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_equipment"
            app:layout_constraintLeft_toRightOf="@+id/tv_year"/>

        <TextView
            android:id="@+id/tv_responsible"
            android:layout_width="113dp"
            android:layout_height="18dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="8dp"
            android:text="responsible"
            android:textAlignment="viewStart"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_constraintLeft_toLeftOf="@+id/tv_body"
            app:layout_constraintTop_toBottomOf="@+id/tv_body"/>

        <TextView
            android:id="@+id/tv_vehicleImageLink"
            android:layout_width="128dp"
            android:layout_height="15dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="image_Link"
            android:textAlignment="viewStart"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_constraintLeft_toRightOf="@+id/tv_responsible"
            app:layout_constraintTop_toBottomOf="@+id/tv_mileage"/>


        <android.support.constraint.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="318dp"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="0dp"/>


    </android.support.constraint.ConstraintLayout>

</LinearLayout>