<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sigma.scsapp">

    <!-- To auto-complete the userId text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- request camera permission -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- LoginActivity, can't do anything without it -->
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <!-- MainActivity, might not even need this -->


        <!-- Scrolling with the terms of agreement -->


        <!-- UserProfileActivity, for showing profile etc -->
        <activity
            android:name=".activities.UserProfileActivity"
            android:label="@string/title_activity_user"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- AdminActivity, showing of amin-stuff -->
        <activity
            android:name=".activities.AdminActivity"
            android:label="@string/title_activity_admin" />

        <!-- BookingActivity, where you actually book the car -->
        <activity
            android:name=".booking.BookingActivity"
            android:label="Booking View">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <!-- LogActivity, where all the good stuff is located -->
        <activity android:name=".activities.LogActivity" />
        <activity
            android:name=".controllers.Controller_Confirm_Booking"
            android:label="@string/title_activity_user"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".dbhelpers.Parser_Vehicle"
            android:label="@string/title_parser_vehicle"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".dbhelpers.Parser_User"
            android:label="@string/title_parser_user"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".booking.BookingForm"></activity>
    </application>

</manifest>