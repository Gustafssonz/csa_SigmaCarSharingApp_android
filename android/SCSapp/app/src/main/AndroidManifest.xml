<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sigma.scsapp">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- request camera permission -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- LoginActivity, can't do anything without it -->
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MainActivity, might not even need this -->

        <!-- Scrolling with the terms of agreement -->
        <activity
            android:name=".ScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <!-- UserProfileActivity, for showing profile etc -->
        <activity
            android:name=".UserProfileActivity"
            android:label="@string/title_activity_driver"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <!-- AdminActivity, showing of amin-stuff -->
        <activity
            android:name=".AdminActivity"
            android:label="@string/title_activity_admin"></activity>

        <!-- LogActivity, where all the good stuff is located -->
        <activity android:name=".LogActivity"></activity>
        <activity
            android:name=".ConfirmBookingActivity"
            android:label="@string/title_activity_confirm_booking"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>